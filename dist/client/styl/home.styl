main>section.index-container
  transform translateY(25%)

  &>.card.me-card
    width 55rem
    min-height 21.5rem
    // display flex
    // flex-direction row
    // align-items stretch
    // flex 1

    //@media screen and (max-width 600px)
      //flex-direction column
    
    &>.content-area
      display flex
      align-items center
      flex-direction column
      width 100%
      
      @media screen and (max-width 600px)
        height 50rem
        justify-content center
        align-items center

      &>.top
        display flex
        align-items center
        width 100%
        
        @media screen and (max-width 600px)
          flex-direction column

        &>.name-stuff
          display flex
          flex 1
          align-items center
          flex-direction column

          &>h1
            font-size 4rem
            margin-top 1rem
            margin-bottom 0
            cursor default
            width 20rem

            @media screen and (max-width 600px)
                  font-size 3rem

          &>.what-i-do
            color #9E9E9E
            width 20rem
            justify-content center
            flex-direction row
            display flex
            
            &>p
              width 50%
              
              &:first-child
                text-align start
                border-right 1px solid lightgray
                padding-right 1rem
                
                @media screen and (max-width 600px)
                  text-align inherit
                  padding 0

              &:last-child
                text-align end
                padding-left 1rem
                
                @media screen and (max-width 600px)
                  text-align inherit
                  padding 0

        &>.pic-area
          align-items center
          display flex
          justify-content center
          width 25%
          margin 1rem
          margin-left 2rem
          flex-direction column

          @media screen and (max-width 600px)
            width auto
            margin-left 0
          

          &>img
            border-radius 50%
            box-shadow 0 1px 8px 0 rgba(0, 0, 0, .2), 0 3px 4px 0 rgba(0, 0, 0, .14), 0 3px 3px -2px rgba(0, 0, 0, .12)
            height 10rem
            width 10rem
          

      &>.social-links-container
        display flex
        width 100%
        flex-wrap wrap
        justify-content space-around
        
        @media screen and (max-width 600px)
          align-items flex-end
          margin-top 8rem

        &>a.social-link
          //background-color #fbfbfb
          color #97989e
          //min-width 15%
          display flex
          align-items center
          flex-direction column
          text-decoration none
          padding .5rem
          margin-top .5rem
          width 3rem
          //box-shadow 0 1px 3px 0 rgba(0, 0, 0, .2), 0 1px 1px 0 rgba(0, 0, 0, .14), 0 2px 1px -1px rgba(0, 0, 0, .12)

          @media screen and (max-width 600px)
            margin 1rem
            min-width 25%
          

          &>[class^="icon-"]
            font-size $SIZE_ICONS
            transition color 0.35s ease

          &:hover
            cursor pointer

            &>.icon-twitter
              color #1da1f2
            
            &>.icon-facebook2
              color #3b5998
            
            &>.icon-github
              color #333333
            
            &>.icon-linkedin
              color #1583bb

            &>.icon-youtube
              color #cc181e
          
            &>.icon-mail
              color #b13138
          
            &>.icon-file-text2
              color darkorange
            

.dynamic-email
  text-align end
  margin-right 1rem
  padding-bottom .5rem
  color #9e9e9e
  font-size 13px
  height 5rem
  align-items flex-end
  align-content flex-end
  display flex
  align-self flex-end
  
  @media screen and (max-width 600px)
    width auto