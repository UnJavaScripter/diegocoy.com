$COLOR_BACKGROUND = #1f354a
$COLOR_TEXT = #333

$SIZE_ICONS = 3.5rem

body
  background-color COLOR_BACKGROUND
  font-family 'Helvetica Neue',  Helvetica,  Arial,  sans-serif
  color $COLOR_TEXT
  padding 0
  margin 0
  background url('../images/bkg.jpg') no-repeat center center fixed
  background-size cover

header
  display flex
  justify-content center
  transform translateY(2rem)

  &>.links
    &>a
      text-decoration none
      color white
      background-color rgba(0, 0, 0, .2)
      font-size 1.1rem
      padding .5rem
      margin-left 1rem
      
      &:first-child
        margin-left 0

// Helpers
.card
  background-color #f5f5f5
  box-shadow 0 1px 5px 0 rgba(0, 0, 0, .2), 0 2px 2px 0 rgba(0, 0, 0, .14), 0 3px 1px -2px rgba(0, 0, 0, .12)
  min-width 100%
  margin-bottom 2rem
  
  @media screen and (max-width 800px)
    max-width 90%


.icon
  display inline-block
  width 1em
  height 1em
  stroke-width 0
  stroke currentColor
  fill currentColor


.text-center
  text-align center


// All main containers

main
  display flex
  justify-content center
  
  &>section
    min-height 26rem
    align-items center
    display flex
    flex-direction column
    max-width 90%
    //justify-content center
    overflow-x hidden

    @media screen and (max-width 800px)
      right auto
      margin-left 5%
      margin-right 5%
      transform translateY(5rem)!important
      position inherit
      margin-bottom 1rem
      align-items center
      justify-content flex-start
